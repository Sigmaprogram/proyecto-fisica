---
const words = []; // Cambia estas palabras según tus necesidades
---

<section class="max-w-[1024px] flex items-center flex-col h-[100vh] mx-auto">
  <div class="mt-8">
    <img src="/n3.png" alt="" class="md:w-72 w-40" />
  </div>
  <div class="flex items-center justify-center p-5">
    <div class="typing-container flex flex-col justify-center">
      <h2
        class="text-[70px] text-center font-Satisfy font-[600] text-green-500 md:text-[80px]"
      >
        Bienvenido a Rectiphy
      </h2>
      <span class="text-center font-Satisfy typed-text">{words}</span>
      <!-- Cursor siempre visible -->
    </div>
  </div>

  <script>
    let currentWordIndex = 0;
    const words = [
      "Isaac Newton",
      "Movimiento Rectilineo Uniforme",
      "Galileo di Vincenzo Bonaiuti de' Galilei",
    ];
    const typingSpeed = 100; // Velocidad de escritura
    const pauseDuration = 3000; // Pausa antes de cambiar la palabra

    const typedTextElement = document.querySelector(".typed-text");

    function typeWord() {
      typedTextElement.innerHTML = ""; // Limpiar el texto antes de empezar
      const word = words[currentWordIndex];
      let i = 0;

      const typingInterval = setInterval(() => {
        typedTextElement.innerHTML += word[i];
        i++;
        if (i === word.length) {
          clearInterval(typingInterval);
          setTimeout(() => {
            currentWordIndex = (currentWordIndex + 1) % words.length;
            typeWord(); // Continuar con la siguiente palabra
          }, pauseDuration);
        }
      }, typingSpeed);
    }

    typeWord(); // Iniciar la animación
  </script>

  <style>
    .typing-container {
      display: inline;
      text-align: center;
      position: relative;
      font-size: 30px;
      color: white; /* Texto blanco */
    }

    .typed-text {
      display: inline;
      overflow: hidden;
      font-weight: normal;
      padding: 0px 10px;
    }

    @keyframes blink-caret {
      from,
      to {
        border-color: transparent;
      }
      50% {
        border-color: white;
      }
    }
  </style>
</section>
